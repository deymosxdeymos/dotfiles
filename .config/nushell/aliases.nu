# Shell aliases
alias la = ls --all
alias ll = ls --long
alias lla = ls --long --all
alias sl = ls

alias cp = cp --recursive --verbose --progress
alias mk = mkdir
alias mv = mv --verbose
alias rm = rm --recursive --verbose

alias pstree = pstree -g 3
alias tree = eza --tree --git-ignore --group-directories-first

# Editor aliases
alias hx = helix
alias v = nvim
